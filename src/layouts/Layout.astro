---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Signal over noise. Honest tech reviews, SaaS comparisons, and developer tool recommendations. Cut through the marketing hype." } = Astro.props;
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="tech reviews, SaaS reviews, developer tools, software comparisons, productivity apps, AI tools, devops, security software" />
    <meta name="author" content="StackSignal" />
    <meta property="og:title" content={`${title} | StackSignal`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/og-image.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
    <link rel="canonical" href="https://stacksignal.io" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>{title} | StackSignal</title>
  </head>
  <body class="bg-white text-[#64748B] min-h-screen flex flex-col font-['Inter']">
    <!-- Top Bar -->
    <div class="bg-[#0F172A] text-slate-300 py-2 text-sm font-mono">
      <div class="max-w-6xl mx-auto px-4 flex justify-between items-center">
        <span class="hidden sm:flex items-center gap-2">
          <span class="text-[#3B82F6]">&gt;</span> hello@stacksignal.io
        </span>
      </div>
    </div>

    <!-- Header -->
    <header class="border-b border-slate-100 bg-white sticky top-0 z-50 shadow-sm">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img src="/images/logo.png" alt="StackSignal" class="h-10 md:h-12 w-auto" />
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a href="/reviews" class="font-medium hover:text-[#3B82F6] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-star text-sm"></i> Reviews
          </a>
          <a href="/comparisons" class="font-medium hover:text-[#3B82F6] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-code-compare text-sm"></i> Comparisons
          </a>
          <a href="/alternatives" class="font-medium hover:text-[#3B82F6] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-shuffle text-sm"></i> Alternatives
          </a>
          <a href="/stacks" class="font-medium hover:text-[#3B82F6] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-layer-group text-sm"></i> Stacks
          </a>
          <a href="/about" class="font-medium hover:text-[#3B82F6] transition-colors">About</a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-[#0F172A]" aria-label="Toggle menu">
          <i class="fa-solid fa-bars text-xl"></i>
        </button>
      </nav>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-slate-100 px-4 py-4">
        <div class="flex flex-col gap-4">
          <a href="/reviews" class="font-medium hover:text-[#3B82F6] py-2"><i class="fa-solid fa-star mr-2"></i>Reviews</a>
          <a href="/comparisons" class="font-medium hover:text-[#3B82F6] py-2"><i class="fa-solid fa-code-compare mr-2"></i>Comparisons</a>
          <a href="/alternatives" class="font-medium hover:text-[#3B82F6] py-2"><i class="fa-solid fa-shuffle mr-2"></i>Alternatives</a>
          <a href="/stacks" class="font-medium hover:text-[#3B82F6] py-2"><i class="fa-solid fa-layer-group mr-2"></i>Stacks</a>
          <a href="/about" class="font-medium hover:text-[#3B82F6] py-2"><i class="fa-solid fa-users mr-2"></i>About</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Pre-Footer CTA -->
    <section class="bg-[#0F172A] py-12 border-t border-slate-800">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">Get the Signal, Skip the Noise</h2>
        <p class="text-slate-400 mb-6 text-lg font-mono">// Weekly roundup of the best tools. No sponsor BS.</p>
        <a href="/reviews" class="inline-flex items-center gap-2 bg-[#3B82F6] hover:bg-[#2563EB] text-white px-8 py-3 rounded-lg font-semibold transition-colors">
          <i class="fa-solid fa-terminal"></i> Browse Reviews
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-[#0F172A] text-white">
      <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8">
          <!-- Brand Column -->
          <div class="lg:col-span-2">
            <div class="mb-4">
              <img src="/images/logo.png" alt="StackSignal" class="h-12 w-auto" />
            </div>
            <p class="text-slate-400 text-sm mb-4 leading-relaxed">Signal over noise. We cut through marketing hype to deliver clear, actionable tech recommendations for developers and teams.</p>
            <p class="text-slate-500 text-sm font-mono"><i class="fa-solid fa-envelope mr-2"></i>hello@stacksignal.io</p>
          </div>

          <!-- Categories -->
          <div>
            <h4 class="font-semibold text-white mb-4">Categories</h4>
            <ul class="space-y-3 text-sm text-slate-400">
              <li><a href="/category/ai-tools" class="hover:text-[#3B82F6] transition-colors flex items-center gap-2"><i class="fa-solid fa-robot w-4"></i>AI Tools</a></li>
              <li><a href="/category/devops" class="hover:text-[#3B82F6] transition-colors flex items-center gap-2"><i class="fa-solid fa-server w-4"></i>DevOps</a></li>
              <li><a href="/category/productivity" class="hover:text-[#3B82F6] transition-colors flex items-center gap-2"><i class="fa-solid fa-bolt w-4"></i>Productivity</a></li>
              <li><a href="/category/security" class="hover:text-[#3B82F6] transition-colors flex items-center gap-2"><i class="fa-solid fa-shield-halved w-4"></i>Security</a></li>
              <li><a href="/category/databases" class="hover:text-[#3B82F6] transition-colors flex items-center gap-2"><i class="fa-solid fa-database w-4"></i>Databases</a></li>
            </ul>
          </div>

          <!-- Popular -->
          <div>
            <h4 class="font-semibold text-white mb-4">Popular</h4>
            <ul class="space-y-3 text-sm text-slate-400">
              <li><a href="/notion-alternatives" class="hover:text-[#3B82F6] transition-colors">Notion Alternatives</a></li>
              <li><a href="/best-vpn" class="hover:text-[#3B82F6] transition-colors">Best VPNs</a></li>
              <li><a href="/ai-writing-tools" class="hover:text-[#3B82F6] transition-colors">AI Writing Tools</a></li>
              <li><a href="/password-managers" class="hover:text-[#3B82F6] transition-colors">Password Managers</a></li>
              <li><a href="/code-editors" class="hover:text-[#3B82F6] transition-colors">Code Editors</a></li>
            </ul>
          </div>

          <!-- Company -->
          <div>
            <h4 class="font-semibold text-white mb-4">Company</h4>
            <ul class="space-y-3 text-sm text-slate-400">
              <li><a href="/about" class="hover:text-[#3B82F6] transition-colors">About</a></li>
              <li><a href="/methodology" class="hover:text-[#3B82F6] transition-colors">How We Test</a></li>
              <li><a href="/contact" class="hover:text-[#3B82F6] transition-colors">Contact</a></li>
              <li><a href="/privacy" class="hover:text-[#3B82F6] transition-colors">Privacy Policy</a></li>
              <li><a href="/terms" class="hover:text-[#3B82F6] transition-colors">Terms</a></li>
            </ul>
          </div>
        </div>

        <div class="border-t border-slate-800 mt-10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-slate-500">
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <p class="font-mono">&copy; {currentYear} StackSignal. All rights reserved.</p>
            <span class="hidden sm:inline text-slate-600">|</span>
            <p class="text-xs opacity-70">A <span class="text-[#3B82F6]">S2F Affiliates</span> brand</p>
          </div>
          <p class="flex items-center gap-2">
            <i class="fa-solid fa-shield-halved text-[#3B82F6]"></i>
            Affiliate Disclosure: We may earn commissions from qualifying purchases.
          </p>
        </div>
      </div>
    </footer>

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
        const icon = menuBtn.querySelector('i');
        if (icon) {
          icon.classList.toggle('fa-bars');
          icon.classList.toggle('fa-xmark');
        }
      });
    </script>
  </body>
</html>
