---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get category counts
const categories = posts.reduce((acc, post) => {
  const cat = post.data.category;
  acc[cat] = (acc[cat] || 0) + 1;
  return acc;
}, {} as Record<string, number>);
---

<Layout title="StackSignal | Tech Reviews for Developers">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-[#0F172A] mb-4">
        Tech Reviews for Developers
      </h1>
      <p class="text-lg text-slate-500 max-w-2xl mx-auto">
        Honest reviews and comparisons of developer tools. No sponsored content. No BS.
      </p>
    </div>

    <!-- Search -->
    <div class="max-w-md mx-auto mb-8">
      <div class="relative">
        <i class="fa-solid fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
        <input
          type="text"
          placeholder="Search articles..."
          class="w-full pl-12 pr-4 py-3 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3B82F6] bg-white font-mono text-sm"
        />
      </div>
    </div>

    <!-- Newsletter -->
    <div class="bg-[#0F172A] rounded-xl p-6 mb-8">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
          <h2 class="text-xl font-bold text-white">Weekly Newsletter</h2>
          <p class="text-slate-400 text-sm font-mono">// Developer tool insights delivered weekly</p>
        </div>
        <form class="flex gap-2">
          <input
            type="email"
            placeholder="dev@example.com"
            class="px-4 py-2 border border-slate-600 rounded-lg bg-slate-800 text-white focus:outline-none focus:ring-2 focus:ring-[#3B82F6] text-sm font-mono"
            required
          />
          <button type="submit" class="bg-[#3B82F6] hover:bg-[#2563EB] text-white px-6 py-2 rounded-lg font-semibold text-sm transition-colors">
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Category Filters -->
    <div class="flex flex-wrap items-center gap-3 mb-6">
      <div class="flex items-center gap-2 text-slate-500">
        <i class="fa-solid fa-filter"></i>
        <span class="font-medium">Filter by Category</span>
      </div>
      <div class="flex flex-wrap gap-2">
        <button class="bg-[#3B82F6] text-white px-4 py-2 rounded-lg text-sm font-mono">
          All <span class="opacity-75">({posts.length})</span>
        </button>
        {Object.entries(categories).map(([cat, count]) => (
          <a href={`/${cat}`} class="bg-white border border-slate-200 text-slate-600 hover:border-[#3B82F6] hover:text-[#3B82F6] px-4 py-2 rounded-lg text-sm font-mono transition-colors capitalize">
            {cat} <span class="opacity-75">({count})</span>
          </a>
        ))}
      </div>
    </div>

    <!-- Post Count -->
    <p class="text-slate-500 mb-6 font-mono text-sm">Showing {posts.length} posts</p>

    <!-- Articles Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="bg-white rounded-xl border border-slate-200 hover:shadow-lg hover:border-[#3B82F6] transition-all group overflow-hidden">
          <div class="p-6">
            <span class="inline-block bg-[#3B82F6] text-white text-xs px-3 py-1 rounded font-mono capitalize mb-3">
              {post.data.category}
            </span>
            <h2 class="text-lg font-bold text-[#0F172A] mb-2 group-hover:text-[#3B82F6] transition-colors line-clamp-2">
              {post.data.title}
            </h2>
            <p class="text-slate-500 text-sm mb-4 line-clamp-2">
              {post.data.description}
            </p>
            <div class="flex items-center justify-between text-xs text-slate-400 font-mono">
              <div class="flex items-center gap-3">
                <span class="flex items-center gap-1">
                  <i class="fa-regular fa-clock"></i>
                  {post.data.readTime}
                </span>
              </div>
              <span>{new Date(post.data.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
